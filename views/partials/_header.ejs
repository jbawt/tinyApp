<style>
  .logBttn {
    border-radius: 5px;
    border: black solid 2px;
    background-color: #28a745;
    padding: 5px 10px;
    color: black;
    opacity: 0.8;
    margin: 10px;
  }
  .userId {
    margin-right: 25px;
  }
</style>

<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (user) { %> 
      <h4 class="userId">Logged in as: <%= user.email %></h4>
      <form method="POST" action="/logout">
        <button class="logBttn" type="submit">Logout</button>
      </form>
    <% } else { %> 
      <a href="/login"><button class="logBttn" type="button">Login</button></a>
      <a href="/register"><button class="logBttn" type="button">Register</button></a>
  <% } %> 
  </nav>
</header>